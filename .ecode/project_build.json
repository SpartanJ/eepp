{
  "ecode-linux": {
    "build": [
      {
        "args": "--disable-static-build --with-text-shaper gmake",
        "command": "premake4",
        "working_dir": "${project_root}"
      },
      {
        "args": "-j${nproc} config=${build_type} ecode",
        "command": "make",
        "working_dir": "${build_dir}"
      }
    ],
    "build_types": [
      "debug",
      "release"
    ],
    "clean": [
      {
        "args": "config=${build_type} clean",
        "command": "make",
        "working_dir": "${build_dir}"
      }
    ],
    "config": {
      "clear_sys_env": false
    },
    "os": [
      "linux"
    ],
    "output_parser": {
      "config": {
        "preset": "generic",
        "relative_file_paths": true
      }
    },
    "run": [
      {
        "args": "-v",
        "command": "ecode-debug",
        "name": "ecode-debug",
        "working_dir": "${project_root}/bin"
      },
      {
        "args": "",
        "command": "ecode",
        "name": "ecode-release",
        "working_dir": "${project_root}/bin"
      },
      {
        "args": "",
        "command": "eehttp-debug",
        "name": "eehttp-debug",
        "run_in_terminal": true,
        "working_dir": "${project_root}/bin"
      },
      {
        "args": "",
        "command": "eepp-sound",
        "name": "eepp-sound",
        "run_in_terminal": true,
        "working_dir": "${project_root}/bin"
      }
    ],
    "var": {
      "build_dir": "${project_root}/make/${os}"
    }
  },
  "ecode-macos": {
    "build": [
      {
        "args": "config=${build_type} ecode",
        "command": "${build_dir}/make_no_fw.sh",
        "working_dir": "${build_dir}"
      }
    ],
    "build_types": [
      "debug",
      "release"
    ],
    "clean": [
      {
        "args": "config=${build_type} clean",
        "command": "${build_dir}/make_no_fw.sh",
        "working_dir": "${build_dir}"
