    ],
    "config": {
      "clear_sys_env": false
    },
    "os": [
      "macos"
    ],
    "output_parser": {
      "config": {
        "preset": "generic",
        "relative_file_paths": true
      }
    },
    "run": [
      {
        "args": "-v",
        "command": "${project_root}/bin/ecode-debug",
        "name": "ecode-debug",
        "working_dir": "${project_root}/bin/"
      },
      {
        "args": "-x",
        "command": "${project_root}/bin/ecode",
        "name": "ecode-release",
        "working_dir": "${project_root}/bin/"
      }
    ],
    "var": {
      "build_dir": "${project_root}/projects/${os}"
    }
  },
  "ecode-windows": {
